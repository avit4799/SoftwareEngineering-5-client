<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demo.NewsActivity"
    tools:showIn="@layout/activity_news">


    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:layout_margin="@dimen/text_margin"

            android:text="This is a title" />
        <TextView
            android:id="@+id/news_abstract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_margin="@dimen/text_margin"

            android:text="This is an abstract" />
        <ImageView
            android:id="@+id/news_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:layout_below="@id/news_abstract"
            android:src="@mipmap/newsimg" />
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_image"
            android:layout_margin="@dimen/text_margin"

            android:text="helloworld" />

        <Button
            android:id="@+id/anotherone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content"

            android:text="feed me another"
            android:layout_alignParentBottom="true"/>
        <Button
            android:id="@+id/backtotop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/anotherone"
            android:text="back to top"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <!-- android:layout_centerHorizontal="true" -->

</android.support.v4.widget.NestedScrollView>
